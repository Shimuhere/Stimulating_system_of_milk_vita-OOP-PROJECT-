      <ComboBox fx:id="assignVehicle" layoutX="410.0" layoutY="286.0" prefHeight="26.0" prefWidth="150.0" />
      <Button layoutX="505.0" layoutY="348.0" mnemonicParsing="false" onAction="#submitOnClick" text="Submit" />
